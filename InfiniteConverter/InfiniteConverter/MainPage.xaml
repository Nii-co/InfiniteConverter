                <DataTemplate>
                    <EntryCell Text="{Binding DisplayName, Converter= {StaticResource myNiceConverter}, Mode=TwoWay}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    -->

    </StackLayout>

</ContentPage>
